<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".AccountFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="0.15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello  there"
            android:textColor="@color/white"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_balance"
            android:text="balance: 0.0 ETH"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="haris@gmail.com"
            android:textColor="@color/white"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_profile_fragment_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal details" />

                <LinearLayout
                    android:id="@+id/ll_child_personal_fragment_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <View
                        android:id="@+id/view_bio_unlock_fragment_settings"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/tv_change_pass_settings_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="change pass"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/view_finance_fragment_settings"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_app_settings_fragment_settings"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="App settings" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/tv_help_n_support_fragments_settings"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Help and Support" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                     />

                <TextView
                    android:id="@+id/tv_earned_rewards"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Earned Rewards" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    />

                <TextView
                    android:id="@+id/tv_nft_rewards"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="My NFTs" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    />

                <LinearLayout
                    android:id="@+id/ll_child_help_fragment_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_faq_settings_fragment"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Faqs"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        />

                    <TextView
                        android:id="@+id/tv_legal_docs_settings_fragment"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Legal document"
                        android:visibility="gone"
                         />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"

                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_meet_the_team_settings_fragment"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="teams"
                        android:visibility="gone"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"

                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_privacy_policy_settings_fragment"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Privacy policy"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                         />

                    <TextView
                        android:id="@+id/tvTutorials"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Tutorials"
                         />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                         />


                    <TextView
                        android:id="@+id/tvLiveSupport"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="live support"
                         />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                     />

                <TextView
                    android:id="@+id/tv_sign_out"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Signout"
                     />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                     />

                <TextView
                    android:id="@+id/tv_app_version_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:text="Version: 0.0.1 (3)"
                     />
            </LinearLayout>


        </ScrollView>

    </LinearLayout>



</LinearLayout>